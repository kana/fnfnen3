%html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='en')
  %head
    %title Sign in - #{Fnfnen3::ApplicationName}
    -# TODO: Add a neat stylesheet.
  %body
    #title
      %h1 Sign in - #{Fnfnen3::ApplicationName}
    #body
      %form(action='#{to('/sign_in')}' method='POST')
        %ul
          %li
            Consumer key:
            %input(id='consumer_key'
                   name='consumer_key'
                   type='text'
                   value='#{session[:consumer_key]}')
          %li
            Consumer secret:
            %input(id='consumer_secret'
                   name='consumer_secret'
                   type='text'
                   value='#{session[:consumer_secret]}')
        %input(type='submit' value='Sign in')
    #copyright_notice
      %address
        Copyright &copy; 2011
        %a(href='http://whileimautomaton.net/') Kana Natsuno
        (
        %a(href='http://twitter.com/kana1') @kana1
        )
        \/
        %a(href='https://github.com/kana/fnfnen3') Source code
        is freely available at GitHub.

